# Crisis Management System Environment Configuration

# Application Settings
APP_NAME="Crisis Management System"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
FIRESTORE_DATABASE=(default)

# Database Connection Pool
FIRESTORE_MIN_CONNECTIONS=5
FIRESTORE_MAX_CONNECTIONS=20

# Vector Database (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_SECURE=false

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro
ADK_AGENT_BUILDER_LOCATION=global

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8001
ENABLE_TRACING=false
JAEGER_ENDPOINT=

# Performance Configuration
MAX_REQUEST_SIZE=16777216
REQUEST_TIMEOUT=300

# Agent Execution Configuration
AGENT_EXECUTION_TIMEOUT=180
MAX_CONCURRENT_AGENTS=10
AGENT_RETRY_ATTEMPTS=3

# Crisis Simulation Configuration
DEFAULT_SIMULATION_TIMEOUT=120
MAX_CRISIS_CASES_PER_COMPANY=1000

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_EXTERNAL_SIGNALS=true
ENABLE_DASHBOARD_UPDATES=true
ENABLE_AUDIT_LOGGING=true

# External API Keys (Optional)
NEWS_API_KEY=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Database Performance
DATABASE_QUERY_TIMEOUT=30
DATABASE_CONNECTION_TIMEOUT=10